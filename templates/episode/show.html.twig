{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    <h1>Episode</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
            <tr>
                <th>Comments</th>
                <td>
                    {% for comment in episode.comments %}
                        <div>
                            {# <div>{{ comment.id }}</div> #}
                            <div>{{ comment.comment }}</div>
                            <div>{{ comment.rate }}</div>
                            <div>{{ comment.author.email }}</div>
                            <div>
                                <a href="{{ path('comment_show', {'id': comment.id}) }}">show</a>
                                <a href="{{ path('comment_edit', {'id': comment.id}) }}">edit</a>
                            </div>
                        </div>
                    {% else %}
                        <div>
                            no records found
                        </div>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    {% if app.user %}
        <a href="{{ path('comment_new', {'episode_slug': episode.slug}) }}">Ajouter un commentaire</a>
    {% endif %}
    <br/>
    <a href="{{ path('episode_index') }}">back to list</a>
    <br/>
    <a href="{{ path('episode_edit', {'slug': episode.slug}) }}">edit</a>

    {{ include('episode/_delete_form.html.twig') }}
{% endblock %}
