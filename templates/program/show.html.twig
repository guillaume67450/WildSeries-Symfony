{% extends 'base.html.twig' %}

{% block title %}Program{% endblock %}

{% block body %}
    <h1>Program</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ program.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ program.title }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ program.summary }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td>{{ program.poster }}</td>
            </tr>
            <tr>
                <th>Visuel de l'image (poster) :</th>
                <td><img alt="lorem_image" title="image_serie_lorem {{ program.poster }}" width="300" height="450" src="{{ program.poster }}"> </td>
            </tr>
        </tbody>
    </table>

    <strong>Acteur(s) :</strong>
        <ul>
            {% for actor in program.actors %}
            <li><a href="{{ path('actor_show', {'slug': actor.slug}) }}">{{ actor.name }}</a> </li>
            {% else %}
            <li>Aucun acteur pour cette s√©rie</li>
             {% endfor %}
        </ul>

    <a href="{{ path('program_index') }}">back to list</a>

{% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('program_edit', {'slug': program.slug}) }}">edit</a>

    {{ include('program/_delete_form.html.twig') }}
{% endif %}
{% endblock %}
