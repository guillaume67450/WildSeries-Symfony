{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
    <h1>Season</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ season.description }}</td>
            </tr>
            <tr>
                <th>Voir les épisodes</th>
                <td><a href="{{ path('season_show', {'id': season.id}) }}">fonctionnalité à venir</a></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_index') }}">back to home</a>
{% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('season_edit', {'id': season.id}) }}">edit</a>

    {{ include('season/_delete_form.html.twig') }}
{% endif %}
{% endblock %}
